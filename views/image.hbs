<div class="panel panel-primary">
    <!-- HEADING -->
    <div class="panel panel-heading">
        <h2 class="panel-title">
            {{image.title}}
        </h2>
    </div>
    <!-- BODY -->
    <div class="panel-body">
        <p>{{image.description}}</p>
        <div class="col-md-12 text-center">
        <img src="/public/upload/{{image.filename}}" class="img-thumbnail" alt="{{image.title}}">
        </div> 
    </div>
    <!-- FOOTER -->
    <div class="panel-footer">
        <div class="rows">
            <div class="col-md-8">
                <button class="btn btn-success" id="btn-like" data-id="{{image.uniqueId}}">
                    <i class="fa fa-heart"> Like</i>
                </button>
                <strong class="likes-count">
                    {{image.likes}}
                </strong>&nbsp;-&nbsp;
                <i class="fa fa-eye"></i>
                <strong>
                    {{image.views}}
                </strong>&nbsp;-&nbsp;Publicacion:
                <em class="text-muted">
                    <!-- Se usa un Helper method de handlebars propio para calcular la antiguedad de la publicacion -->
                    {{timeago image.timestamp}}
                </em>    
            </div>
        </div>
    </div>
</div>
<div class="pane panel-default">
    <!-- HEADING -->
    <div class="panel-heading">
        <div class="row">
            <div class="col-md-8">
                <strong class="panel-title">
                    Comentarios:
                </strong>
            </div>
            <div class="col-md-4 text-right">
                <button class="btn btn-default btn-sm" id="btn-comment" data-id="{{image.uniqueId}}">
                    <i class="fa fa-comments-o">
                        Publicar Comentario...
                    </i>
                </button>
            </div>
        </div>
    </div>
    <div class="panel panel-body">
        <blockquote id="post-comment">
            <div class="row">
                <form method="POST"action="/images/comment/{{image.uniqueId}}">
                <!-- Campo de captura de nombre -->
                <div class="form-group col-sm-12">
                    <label for="name" class="col-sm-2 control-label">
                        Nombre:
                    </label>
                    <div class="col-sm-10">
                        <input name="name" type="text" class="form-control">
                    </div>
                </div>
                <!-- EMAIL -->
                <div class="form-group col-sm-12">
                    <label class="col-sm-2 control-label" for="email">
                        Email: 
                    </label>
                    <div class="col-sm-10"><input name="name" type="text" class="form-control">
                    </div>
                </div>                
                <!-- COMENTARIOS -->
                <div class="form-group col-sm-12">
                    <label class="col-sm-2 control-label" for="comment">
                        Comentario: 
                    </label>
                    <div class="col-sm-10"><textarea name="comment" id="comment" rows="2" class="form-control"></textarea>
                    </div>
                </div>
                <!-- Bontoncin -->
                <div class="form-group col-sm-12">
                    <div class="col-sm-12 text-right">
                        <button type="submit" id="comment-btn" class="btn btn-success">
                            <i class="fa fa-comment">
                                Publicar
                            </i>
                        </button>
                    </div>
                </div>
                </form>
            </div>
        </blockquote>
        <!-- Listado de todos los comenatrios realizados a una imagen -->
        <ul class="media-list">
            {{#each comments}}
            <li class="media">
                <a href="#" class="pull-left">
                    <img src="https://www.gravatar.com/avatar{{gravatar}}" alt="imagen avatar" class="media-object">
                </a>
                <div class="media-body">
                    {{comment}}
                    <br>
                    <strong class="media-heading">
                        {{name}}
                    </strong>
                    <small class="text-muted">
                        {{timeago timestamp}}
                    </small>
                </div>
            </li>
            {{/each}}
        </ul>
    </div>
</div>